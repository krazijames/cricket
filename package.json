{
  "name": "cricket",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "craco build",
    "eject": "craco eject",
    "postinstall": "cd functions && yarn",
    "serve:functions": "cd functions && yarn serve",
    "start": "run-p --print-label start:react serve:functions",
    "start:react": "craco start",
    "test": "craco test"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@material-ui/core": "^4.8.0",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.7.1",
    "apisauce": "^1.1.1",
    "date-fns": "^2.8.1",
    "firebase": "^7.6.0",
    "firebaseui": "^4.3.0",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "react-scroll": "^1.7.14",
    "react-sortable-hoc": "^1.10.1",
    "react-youtube": "^7.9.0",
    "youtube-duration-format": "^0.2.0"
  },
  "devDependencies": {
    "@craco/craco": "^5.6.2",
    "firebase-tools": "^7.11.0",
    "husky": "^3.1.0",
    "import-sort-style-module": "^6.0.0",
    "prettier": "1.19.1",
    "prettier-plugin-import-sort": "^0.0.3",
    "prettier-plugin-package": "^0.3.1",
    "pretty-quick": "^2.0.1",
    "yarn-run-all": "^3.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "@cricket/(.*)$": "<rootDir>/src/$1"
    }
  }
}
