{
  "name": "cricket",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "craco build",
    "eject": "craco eject",
    "postinstall": "cd functions && yarn",
    "serve:functions": "cd functions && yarn serve",
    "start": "run-p --print-label start:react serve:functions",
    "start:react": "craco start",
    "test": "craco test"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.10.0",
    "apisauce": "^1.1.2",
    "date-fns": "^2.17.0",
    "firebase": "^7.14.1",
    "firebaseui": "^4.6.1",
    "lodash": "^4.17.19",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-scroll": "^1.8.1",
    "react-sortable-hoc": "^1.11.0",
    "react-youtube": "^7.9.0",
    "youtube-duration-format": "^0.2.0"
  },
  "devDependencies": {
    "@craco/craco": "^5.6.4",
    "firebase-tools": "^8.6.0",
    "husky": "^4.2.5",
    "import-sort-style-module": "^6.0.0",
    "prettier": "1.19.1",
    "prettier-plugin-import-sort": "^0.0.4",
    "prettier-plugin-package": "^0.3.1",
    "pretty-quick": "^2.0.1",
    "yarn-run-all": "^3.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "@cricket/(.*)$": "<rootDir>/src/$1"
    }
  }
}
